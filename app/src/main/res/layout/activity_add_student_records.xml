<LinearLayout
    android:background="@color/colorBackground"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.project.quiz.activities.ActivityAddStudentRecords">
    <include
        android:id="@+id/toolbar"
        layout="@layout/tool_bar"/>
    <ProgressBar
        android:layout_marginTop="200dp"
        android:id="@+id/progress"
        android:layout_gravity="center"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:indeterminate="true" />

    <com.project.quiz.customviews.TextViewRegularFont
        android:id="@+id/authenticateText"
        android:layout_marginTop="50dp"
        android:text="Authenticating..."
        android:layout_width="wrap_content"
        android:textSize="@dimen/font_size_xlarge"
        android:textColor="@color/colorText"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_height="wrap_content" />
    <com.project.quiz.customClasses.SlidingTabLayout
        android:background="@color/colorPrimaryLight"
        android:id="@+id/sliding_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <android.support.v4.view.ViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
